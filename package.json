{
  "name": "custom-cursor",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "./src/main/main.js",
  "author": "Juraj Guba",
  "scripts": {
    "dev-server": "webpack serve --mode development --config ./webpack.development.js",
    "dev": "cross-env NODE_ENV=development electron .",
    "preprod": "webpack --mode production --config ./webpack.production.js",
    "prod": "cross-env NODE_ENV=production electron .",
    "start": "concurrently \"npm run dev-server\"  \"npm run dev\"",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "npm run preprod && electron-builder",
    "dist-mac": "npm run preprod && electron-builder --mac",
    "dist-linux": "npm run preprod && electron-builder --linux",
    "dist-windows": "npm run preprod && electron-builder --windows"
  },
  "build": {
    "productName": "custom-cursor",
    "appId": "com.custom.cursor",
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jurkog/custom-c.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jurkog/custom-c/issues"
  },
  "homepage": "https://github.com/jurkog/custom-c#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.23.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^26.2.3",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@electron-toolkit/utils": "^2.0.1",
    "auto-launch": "^5.0.6",
    "koffi": "2.5.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.6"
  }
}
